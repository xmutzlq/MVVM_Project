<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/common_left_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/size_6dp"
        android:layout_marginLeft="@dimen/size_50dp"
        android:gravity="center"
        android:background="@drawable/bg_round_angle_white"
        android:clickable="true"
        android:text="@string/comm_str_comment_check_all"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/common_right_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/size_6dp"
        android:layout_marginRight="@dimen/size_50dp"
        android:background="@drawable/bg_round_angle_white"
        android:gravity="center"
        android:clickable="true"
        android:text="@string/comm_str_good_buy_consult"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_13sp"
        android:textStyle="bold" />
</LinearLayout>
