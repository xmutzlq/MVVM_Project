<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_5dp"
        android:paddingLeft="@dimen/size_15dp"
        android:paddingRight="@dimen/size_15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/tv_compute_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_14sp"
            android:text="@string/app_name"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/t_compute_item_height"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size_8dp"
            android:background="@drawable/bg_round_rectangle_white">
            <TextView
                android:id="@+id/et_compute_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10dp"
                android:textColor="@color/gray_88"
                android:textSize="@dimen/text_size_14sp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn_calculator_3"
            android:layout_width="@dimen/t_compute_item_height"
            android:layout_height="@dimen/t_compute_item_height"
            android:layout_marginLeft="@dimen/size_5dp"
            android:clickable="true"
            android:background="@drawable/bg_round_rectangle_red_btn">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_compute"/>
        </FrameLayout>

    </LinearLayout>
</merge>
